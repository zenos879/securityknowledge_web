.list_content {
  background-color: white;
  width: 100%;
  height: 100%;
  line-height: 1.6;
  text-align: left;
  margin-top: 100px;
}

.list_art_container {
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 65px;
  border-bottom: 1px dashed #ddd;
}

.art_cnt {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 35px;
  color: #666;
  font-size: 15px;
}

.art_cnt_first {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 10px;
}

.list_dian {
  width: 15px;
  height: 15px;
}

.list_art {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 300px;
}

.list_collect {
  width: 25px;
  height: 25px;
  margin-right: 7px;
}

.art_desc {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #999;
  font-size: 13px;
}

.view_times_wrapper {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-right: 7px;
}

.art_no {
  margin-left: 25px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.view_img {
  width: 15px;
  height: 15px;
}

.view_times {
  margin-left: 2px;
}
