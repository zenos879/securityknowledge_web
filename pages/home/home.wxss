@import "../category/articleList/article-item/article-item-template.wxss";

.slide-image {
  width: 100%;
  height: 150;
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 95%;
  height: 80rpx;
  background-color: whitesmoke;
  margin-top: 2%;
  margin-left: 2%;
  margin-right: 2%;
  border: 1rpx solid whitesmoke;
}

.search input {
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 10rpx;
  width: 90%;
}

.search-img,.xx-img {
  width: 18rpx;
  height: 18rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
}

 .imagestyle {
  width: 20px;
  height: 20px;
}

.icon-wrap {
  width: 25%;
  height: 80%;
  float: left;
  text-align: center;
}

.smallsize {
  font-size: 15px;
  color: #333;
}

.zan-icon {
  display: inline-block;
}

.zan-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
}

.zan-cell__bd {
  flex: 1;
}

.iconstyle {
  width: 80rpx;
  height: 80rpx;
}

.update {
  font-size: 15px;
  background-color: whitesmoke;
  padding-left: 10px;
  line-height: 30px;
}
.list_art{
  font-size: 14px;
}