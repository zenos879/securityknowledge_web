@import "../../category/articleList/article-item/article-item-template.wxss";
@import "/pages/share/share.wxss";
@import "/pages/login/login.wxss";

.search-fixed {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0px;
  width:100%;
  height: 100px;
  background-color:#008792;
}

.search-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width:98%;
  height:50%;
  margin-top:3px;
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 96%;
  height: 40px;
  background-color: whitesmoke;
  /* margin-top: 2%; */
  margin-left: 2%;
   /*margin-right: 2%; */
  border: 1rpx solid whitesmoke;
  border-radius: 4px;
}

.search input {
  border-radius: 20px;
  font-size: 13px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 10px;
  padding-right: 20px;
  line-height: 40px;
  width: 85%;
}

.search-img {
  width: 10px;
  height: 10px;
  padding-left: 10px;
}

.xx-img {
  width: 13px;
  height: 13px;
  margin-right: 10px;
}

.search-result-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 94%;
  height: 25px;
  margin-top: 2%;
  /* margin-left: 2%; */
  border-radius: 2px;  
}

.search-result {
  color: white;
  font-size: 15px;
}

